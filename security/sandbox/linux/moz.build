    '../chromium/sandbox/linux/seccomp-bpf/syscall.cc',
    '../chromium/sandbox/linux/seccomp-bpf/syscall_iterator.cc',
    '../chromium/sandbox/linux/seccomp-bpf/trap.cc',
    '../chromium/sandbox/linux/seccomp-bpf/verifier.cc',
    'Sandbox.cpp',
    'SandboxFilter.cpp',
]

DEFINES['NS_NO_XPCOM'] = True
DISABLE_STL_WRAPPING = True

LOCAL_INCLUDES += ['/security/sandbox/chromium/base/shim']
LOCAL_INCLUDES += ['/security/sandbox/chromium']
LOCAL_INCLUDES += ['/security/sandbox']
LOCAL_INCLUDES += ['/nsprpub'] # for time shim?

USE_LIBS = [
    'nspr',
]

if CONFIG['OS_TARGET'] != 'Android':
    # Needed for clock_gettime with glibc < 2.17:
    OS_LIBS += [
        'rt',
    ]

DIRS += [
    'glue',
]
